<resources>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/ButtonActionMenu</item>
    </style>

    <style name="ButtonActionMenu" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/colorText</item>
    </style>


</resources>
